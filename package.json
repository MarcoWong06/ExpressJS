{
  "name": "@cap-cws/express-kpay",
  "version": "2.1.0",
  "description": "CWS Express - typescript express server for cap",
  "author": "Charles Ting",
  "main": "build/server.js",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=20.19.0"
  },
  "config": {
    "port": 3000,
    "image": "cityray/cap-cws/kpay",
    "dockerfile": "./dockerfiles/build.dockerfile"
  },
  "scripts": {
    "start": "cross-env PORT=${npm_package_config_port} CHOKIDAR_USEPOLLING=true CHOKIDAR_INTERVAL=1000 tsx watch src/server-index.ts",
    "test": "cross-env PORT=${npm_package_config_port} CHOKIDAR_USEPOLLING=true CHOKIDAR_INTERVAL=1000 tsx watch src/test-index.ts",
    "build": "npm-run-all clean esbuild",
    "clean": "rimraf build/*",
    "esbuild": "node ./config/esbuild.config.js",
    "typescript-check": "tsc --noEmit",
    "yarn:vesion": "yarn --version",
    "yarn:outdated": "yarn outdated",
    "yarn:clean": "yarn cache clean",
    "yarn:checkfile": "yarn install --check-files",
    "remove:node_modules": "npx rimraf --glob **/node_modules **/build && npx rimraf node_modules && npx rimraf **/yarn.lock"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsrsasign": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/axios": "^0.9.36",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsrsasign": "^10.5.15",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^10.0.0",
    "globals": "^16.3.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.35.1",
    "esbuild": "^0.25.9",
    "esbuild-node-externals": "^1.18.0"

  }
}
